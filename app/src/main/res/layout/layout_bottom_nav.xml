<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomNavigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#F5F5F5"
    android:elevation="16dp"
    android:paddingVertical="8dp">

    <!-- Map Button -->
    <LinearLayout
        android:id="@+id/btnNavMap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_map_icon"
            app:tint="@color/ina_red_dark"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mapa"
            android:textSize="12sp"
            android:textColor="@color/ina_red_dark"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Alerts List Button -->
    <LinearLayout
        android:id="@+id/btnNavList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_list_icon"
            app:tint="@color/ina_red_dark"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alertas"
            android:textSize="12sp"
            android:textColor="@color/ina_red_dark"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Bus Button -->
    <LinearLayout
        android:id="@+id/btnNavBus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_bus"
            app:tint="@color/ina_red_dark"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paraderos"
            android:textSize="12sp"
            android:textColor="@color/ina_red_dark"
            android:textStyle="bold"/>
    </LinearLayout>
    
     <!-- Groups Button (Reemplaza a Contacto) -->
    <LinearLayout
        android:id="@+id/btnNavGroups"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_group"
            app:tint="@color/ina_red_dark"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grupos"
            android:textSize="12sp"
            android:textColor="@color/ina_red_dark"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>