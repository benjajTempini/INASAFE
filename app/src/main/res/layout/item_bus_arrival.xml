<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Cabecera del servicio: Número y Destino -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvServiceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="507"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Peñalolen - (M) Parque O'higgins"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="#E0E0E0"/>

        <!-- Primer Bus (Próximo) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Icono Bus -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_bus_side"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_bus_icon"
                android:padding="4dp"/>

            <!-- Tiempo y Distancia (Simulado) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvArrival1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Llegando"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                 <!-- Opcional: Distancia si estuviera disponible -->
                 <!--
                 <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200m"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray"/>
                 -->
            </LinearLayout>

            <!-- Patente -->
            <TextView
                android:id="@+id/tvPlate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FLXC46"
                android:background="@drawable/bg_plate_number"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>
                
             <!-- Icono bus pequeño (tipo 'live' o mapa) -->
             <ImageView
                 android:layout_width="24dp"
                 android:layout_height="24dp"
                 android:src="@drawable/ic_bus_marker"
                 app:tint="@color/ina_red"/>
        </LinearLayout>
        
        <!-- Segundo Bus (Siguiente) - Opcional / Separador -->
        <LinearLayout
             android:id="@+id/layoutSecondBus"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="center_vertical">
             
             <!-- Icono Bus (fantasma/transparente o igual) -->
             <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_bus_side"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_bus_icon"
                android:padding="4dp"
                android:alpha="0.5"/>
                
             <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:id="@+id/tvArrival2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07 a 11 min"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@android:color/black"/>
             </LinearLayout>
             
             <!-- Patente 2 -->
             <TextView
                android:id="@+id/tvPlate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----"
                android:background="@drawable/bg_plate_number"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

             <ImageView
                 android:layout_width="24dp"
                 android:layout_height="24dp"
                 android:src="@drawable/ic_bus_marker"
                 app:tint="@color/ina_red"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>