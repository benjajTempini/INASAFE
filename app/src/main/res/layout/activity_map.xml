<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MapActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ina_red"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_shield"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mapa de Incidentes"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Map Container -->
    <FrameLayout
        android:id="@+id/mapContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:layout_above="@id/bottomPanel">

        <!-- Static Map Background -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_map_real"
            android:scaleType="centerCrop"/>

        <!-- Labels for New Diagonal Map -->
        
        <!-- Av. Dorsal Label (Top) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Av. Dorsal"
            android:textColor="#555555"
            android:textStyle="bold"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:textSize="12sp"
            android:rotation="8"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="80dp"
            android:layout_marginStart="-60dp"/>

        <!-- Autopista Central Label (Diagonal Right) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autop. Central"
            android:textColor="#E3F2FD"
            android:textStyle="bold"
            android:textSize="12sp"
            android:rotation="75"
            android:layout_gravity="center"
            android:translationX="80dp"
            android:translationY="-20dp"/>

        <!-- Bravo de Saravia Label (Diagonal Left) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bravo de Saravia"
            android:textColor="#555555"
            android:textStyle="bold"
            android:shadowColor="#FFFFFF"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:textSize="12sp"
            android:rotation="83"
            android:layout_gravity="center"
            android:translationX="-5dp"
            android:translationY="0dp"/>
            
         <!-- JJ Detergentes Label -->
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JJ Detergentes\nCasa Matriz"
            android:textColor="#455A64"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:translationX="10dp"
            android:translationY="-80dp"/>
            
        <!-- INACAP Pin (Static) -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_pin"
            app:tint="@color/ina_red_dark"
            android:layout_gravity="center"
            android:translationX="-90dp" 
            android:translationY="40dp"/>
            
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INACAP sede Renca"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:shadowColor="#FFFFFF"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowRadius="4"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:translationX="-80dp"
            android:translationY="70dp"/>

        <!-- Dynamic Pins Container -->
        <FrameLayout
            android:id="@+id/pinsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <!-- Bottom Panel -->
    <LinearLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="16dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAlertCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alertas activas en la zona: 0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"/>
            
    </LinearLayout>

</RelativeLayout>