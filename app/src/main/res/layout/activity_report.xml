<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ReportActivity">

    <!-- Barra Navegaci칩n Inferior (Definida PRIMERO o con ID para referencia) -->
    <include
        android:id="@+id/bottomNavigation"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ina_red"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_shield"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reportar Incidente"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripci칩n del suceso"
                    android:textColor="@color/ina_red_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej: Robo de mochila..."
                    android:inputType="textCapSentences"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles"
                    android:textColor="@color/ina_red_dark"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="M치s informaci칩n..."
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:gravity="top|start"
                    android:layout_marginBottom="32dp"/>

                <Button
                    android:id="@+id/btnSendReport"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Enviar Reporte"
                    android:backgroundTint="@color/ina_red"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnViewAll"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Ver Todos los Incidentes"
                    android:backgroundTint="@color/ina_pink"
                    android:textColor="@color/ina_red_dark"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="24dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>